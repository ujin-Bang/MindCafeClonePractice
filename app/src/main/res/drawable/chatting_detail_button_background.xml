<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">

        <layer-list>

            <item>

                <shape
                    android:shape="rectangle">

                    <solid
                        android:color="@color/gray"/>

                    <corners
                        android:radius="3dp"/>


                </shape>


            </item>

            <item
                android:left="1dp"
                android:right="1dp"
                android:bottom="2dp">

                <shape
                    android:shape="rectangle">

                    <solid
                        android:color="@color/light_yellow"/>

                    <corners
                        android:radius="3dp"/>

                </shape>


            </item>


        </layer-list>


    </item>
</selector>