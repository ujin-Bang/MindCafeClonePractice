<?xml version="1.0" encoding="utf-8"?>

<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쿠폰 등록하기"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/btnX"
                android:background="@drawable/ripple_effect_background"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/x_icon"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/bottomnav"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCouponCodeCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="쿠폰코드"
                android:layout_marginStart="15dp"
                android:paddingVertical="10dp"
                android:background="@drawable/coupon_code_button_box"
                android:backgroundTint="@color/coupon_button"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/btnCouponCodeNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_weight="1"
                android:text="쿠폰코드"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:background="@drawable/coupon_code_button_box"
                android:textColor="@color/coupon_button"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/btnCouponNameNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="15dp"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/coupon_button"
                android:text="쿠폰명"
                android:background="@drawable/coupon_code_button_box"/>

            <TextView
                android:id="@+id/btnCouponNameCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginEnd="15dp"
                android:paddingVertical="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="쿠폰명"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@color/coupon_button"/>


        </LinearLayout>

        <TextView
            android:id="@+id/txtText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰 코드를 입력해주세요."
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"/>


        <LinearLayout
            android:id="@+id/layoutCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_background_box"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="XXXX-XXXX-XXXX-XXXX"
                android:maxLines="19"
                android:inputType="number"
                android:backgroundTint="@color/white"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutName"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_background_box"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:backgroundTint="@color/white"/>


        </LinearLayout>

        <Button
            android:id="@+id/btnCouponIssued"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/coupon_button"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="쿠폰 발급받기"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"/>



    </LinearLayout>
</layout>
