<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쿠폰 등록하기"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_4"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/btnX"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/x_icon"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/bottomnav"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnCouponCode"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/coupon_code_button_box"
                    android:backgroundTint="@color/coupon_button"
                    android:text="쿠폰코드"/>

                <TextView
                    android:id="@+id/btnCouponCode2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/bottomnav"
                    android:background="@drawable/coupon_code_button_box"
                    android:text="쿠폰코드"/>



                <TextView
                    android:id="@+id/btnCouponName2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/bottomnav"
                    android:background="@drawable/coupon_code_button_box"
                    android:text="쿠폰명"/>

                <TextView
                    android:id="@+id/btnCouponName"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/coupon_button"
                    android:text="쿠폰명"/>


            </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰 코드를 입력해주세요."
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="#494949"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_background_box"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtCouponCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="XXXX-XXXX-XXXX-XXXX"
                    android:background="@color/white"/>

                <EditText
                    android:id="@+id/edtCouponName"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@color/white"/>


            </LinearLayout>

            <Button
                android:id="@+id/btnCouponIssued"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:text="쿠폰 발급받기"
                android:backgroundTint="@color/coupon_button"
                android:textSize="18sp"
                android:fontFamily="@font/font_3"/>
        </LinearLayout>


    </LinearLayout>


</layout>
