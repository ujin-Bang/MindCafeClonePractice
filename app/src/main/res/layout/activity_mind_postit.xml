<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".MindPostitActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="남은시간 D-1 11시간전"
                    android:background="@drawable/time_background"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="잠시 현실에서 벗어날 수 있도록 시간이 멈춘다면\n무엇을 하고 싶나요?"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="마음의 여유를 가지고 잘 진행되는 일과 나 그리고 나의 삶에서 \n만족스러운 것들에 진심으로 감사해 한다면 그런 부분들을 더욱\n강화하는데 도움이 됩니다."/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/light_gray"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mindPostitRecyclerView"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="80dp"
                android:elevation="5dp"
                android:background="@drawable/custom_ripple_effect2"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/mind_postit_write_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"/>



        </FrameLayout>


    </LinearLayout>
</layout>
