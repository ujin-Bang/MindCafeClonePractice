<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            app:cardUseCompatPadding="true"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/custom_ripple_effect2"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2급) 보이스 코칭 1회기권"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/txtSeveralMinutesTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="회기당 5분 x 1회"/>

                <TextView
                    android:id="@+id/txtExpirationPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제일로부터 2주간 유효"/>

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:text="45,000원 (1회기당 45,000원)"/>




            </LinearLayout>







        </androidx.cardview.widget.CardView>


    </LinearLayout>

</layout>
