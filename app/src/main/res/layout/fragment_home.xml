<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment
                android:tag="maniTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.start.mindcafeclonepractice.bottomnavhomefragment.HomeTopFragment"/>

            <fragment
                android:tag="makasPick"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.start.mindcafeclonepractice.bottomnavhomefragment.HomeMakasPickFragment"/>


            <fragment
                android:tag="view4"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.start.mindcafeclonepractice.bottomnavhomefragment.Home4ViewFragment"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray"/>

            <fragment
                android:tag="expert"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.start.mindcafeclonepractice.bottomnavhomefragment.HomeExpertFragment"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray"/>

            <fragment
                android:tag="groupProgram"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="com.start.mindcafeclonepractice.bottomnavhomefragment.HomeGroupProgramFragment"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray"/>

            <fragment
                android:tag="review"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                class="com.start.mindcafeclonepractice.bottomnavhomefragment.HomeReviewFragment"/>

            <ImageView
                android:id="@+id/imgBanner"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"/>
        </LinearLayout>

    </ScrollView>
    </LinearLayout>



</layout>
