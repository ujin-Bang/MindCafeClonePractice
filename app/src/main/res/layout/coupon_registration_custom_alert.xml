<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰 등록하기"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/btnCouponRegistrationX"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_effect_background"
            android:src="@drawable/x_icon"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/coupon_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txtCouponCode2"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/coupon_button"
            android:background="@drawable/coupon_name_button_box"
            android:text="쿠폰코드"/>

        <TextView
            android:id="@+id/txtCouponCode"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:backgroundTint="@color/coupon_button"
            android:textColor="@color/white"
            android:background="@drawable/coupon_code_button_box"
            android:text="쿠폰코드"/>


        <TextView
            android:id="@+id/txtCouponName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/coupon_button"
            android:background="@drawable/coupon_name_button_box"
            android:text="쿠폰명"/>

        <TextView
            android:id="@+id/txtCouponName2"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/coupon_button"
            android:background="@drawable/coupon_code_button_box"
            android:text="쿠폰명"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:paddingBottom="40dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtCodeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰 코드를 입력해주세요."
            android:textColor="#2E2E2E"/>

        <TextView
            android:id="@+id/txtCodeInput2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰 코드를 입력해주세요."
            android:textColor="#2E2E2E"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:background="@drawable/coupon_code_edttext_button_box">

            <EditText
                android:id="@+id/edtCouponCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:hint="XXXX-XXXX-XXXX-XXXX"
                android:backgroundTint="@color/white"
                android:inputType="number"/>

            <EditText
                android:id="@+id/edtCouponCode2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingStart="20dp"
                android:backgroundTint="@color/white"
                android:inputType="text"/>



        </LinearLayout>

        <TextView
            android:id="@+id/btnCouponIssued"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="쿠폰 발급받기"
            android:layout_marginTop="25dp"
            android:textSize="18sp"
            android:backgroundTint="@color/coupon_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/coupon_code_edttext_button_box"/>
    </LinearLayout>


</LinearLayout>