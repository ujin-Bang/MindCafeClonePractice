<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SelectExpertConsultingMenuActivity">



        <com.google.android.material.tabs.TabLayout
            android:id="@+id/consultingMenuTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabSelectedTextColor="@color/black"
            app:tabIndicatorFullWidth="false"
            app:tabTextAppearance="@style/tab_text"
            app:tabIndicatorColor="@color/dark_green"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/consultingViewPager"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btnQandA"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/question_icon"
                android:elevation="5dp"
                android:background="@drawable/custom_ripple_effect2"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="20dp"
                android:layout_gravity="end|bottom"/>

        </FrameLayout>


    </LinearLayout>
</layout>
