<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="쿠폰 등록하기"
                android:textStyle="bold"
                android:fontFamily="@font/font_4"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


            <ImageView
                android:id="@+id/btnGroupRegistrationX"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/x_icon"
                android:background="@drawable/ripple_effect_background"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/coupon_button"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCouponCodeChecked"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="쿠폰코드"
                android:gravity="center"
                android:background="@drawable/coupon_code_button_box"
                android:backgroundTint="@color/coupon_button"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/btnCouponCode"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="쿠폰코드"
                android:gravity="center"
                android:background="@drawable/coupon_code_button_box"
                android:textColor="@color/bottomnav"/>


            <TextView
                android:id="@+id/btnCouponName"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="쿠폰명"
                android:gravity="center"
                android:textColor="@color/bottomnav"
                android:background="@drawable/coupon_code_button_box"/>


            <TextView
                android:id="@+id/btnCouponNameChecked"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="쿠폰명"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/coupon_button"/>



        </LinearLayout>

        <TextView
            android:id="@+id/txtCouponCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:text="쿠폰 코드를 입력해주세요"/>


        <LinearLayout
            android:id="@+id/layoutEdtCouponCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_background_box">

            <EditText
                android:id="@+id/edtCouponCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="XXXX-XXXX-XXXX-XXXX"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/white"
                android:inputType="number"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutEdtCouponName"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_background_box">

            <EditText
                android:id="@+id/edtCouponName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/white"
                android:inputType="text"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnCouponIssued"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/coupon_button"
            android:textColor="@color/white"
            android:text="쿠폰 발급받기"
            android:textStyle="bold"
            android:textSize="16sp"/>


    </LinearLayout>

</layout>
